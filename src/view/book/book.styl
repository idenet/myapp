@import '../../common/stylus/mixin.styl'
.book
  position: absolute
  top: 85px
  width: 100%
  overflow: hidden
  .category-wrapper
    display: flex
    border-1px(rgba(7, 17, 27, 0.1), 'top')
    .content-wrapper
      overflow: hidden
      white-space: nowrap
      flex: 1
      padding: 10px
      .category-list
        .item
          display: inline-block
          margin-right: 6px
          border: 0.5px solid rgba(7, 17, 27, 0.1)
          border-radius: 15px
          color: rgba(7, 17, 27, 0.5)
          &:last-child
            margin-right: 0
          &.current
            border-color: rgb(0, 160, 220)
          .text
            display: block
            padding: 4px
            font-size: 12px
            line-height: 12px
      .text
        display: block
        padding: 4px
        font-size: 12px
        line-height: 12px
        color: rgba(7, 17, 27, 0.5)
    .category-button
      display: inline-block
      flex: 0 0 34px
      width: 34px
      border-left: 0.5px solid rgba(7, 17, 27, 0.1)
      text-align: center
      .icon-circle-down, .icon-circle-up
        display: block
        margin-top: 13px
        &.icon-circle-down
          color: rgba(7, 17, 27, 0.4)
        &.icon-circle-up
          color: rgb(0, 160, 220)
  .detail-wrapper
    width: 100%
    height: 150px
    z-index: 40
    overflow: hidden
    background: #f3f5f7
    border-1px(rgba(7, 17, 27, 0.1), 'top')
    transform: translate3d(0, 0, 0)
    opacity: 1
    &.fold-enter-active, &.fold-leave-active
      transition: all 0.5s
    &.fold-enter, &.fold-leave-active
      opacity: 0
      transform: translate3d(0, -100%, 0)
    .category-list
      display: inline-block
      padding: 0 1px
      .item
        display: flex
        float: left
        width: 32.9%
        height: 50px
        justify-content: center
        align-items: center
        border-bottom: 0.5px solid rgba(7, 17, 27, 0.1)
        border-left: 0.5px solid rgba(7, 17, 27, 0.1)
        color: rgba(7, 17, 27, 0.7)
        &:nth-child(3n)
          border-right: 0.5px solid rgba(7, 17, 27, 0.1)
        &:last-child
          border-right: 0.5px solid rgba(7, 17, 27, 0.1)
        &.current
          color: rgb(0, 160, 220)
        .text
          font-size: 12px
.list-mask
  position: fixed
  top: 125px
  left: 0
  width: 100%
  height: 100%
  z-index: 30
  opacity: 1
  backdrop-filter: blur(10px)
  background: rgba(7,17,27,0.6)
  &.fade-enter-active, &.fade-leave-active
    transition: all 0.5s
  &.fade-enter, &.fade-leave-active
    opacity: 0
    background: rgba(7, 17, 27, 0)

